rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /templates/{templateId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /templateVersions/{versionId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.createdBy;
    }

    match /abTests/{testId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /trackingEvents/{eventId} {
      // Webhooks can create tracking events without auth; restrict reads.
      allow create: if true;
      allow read: if false;
    }

    match /insights/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

